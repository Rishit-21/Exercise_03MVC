@model IEnumerable<InvoiceModel>

<div class="Partytbl table-center ">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Invoice ID</th>
                <th>Party Name</th>
                <th>Product Name</th>
                <th>Current Rate</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.partyName</td>
                    <td>@item.productName</td>
                    <td>@item.CurrentRate</td>
                    <td>@item.Quantity</td>
                    <td>@item.Total</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="form-group row justify-content-lg-end addAssignBtns flex-column flex-lg-grow-1 align-content-end w-100">
    <div class="form-group row justify-content-lg-end addAssignBtns flex-lg-row flex-lg-grow-1 align-content-end w-100">
        <label class="font-weight-bold  col-sm-2">Grand Total:</label>
        <label class="font-weight-bold form-control col-sm-2">@ViewBag.grandTotal</label>
        <div class="form-group row justify-content-lg-end addAssignBtns  align-content-end w-100">
            <a value="Close" asp-action="Close" asp-controller="Invoice" class="btn btn-block  w-25 btn-danger cancelBtn">Close</a>

        </div>
    </div>

</div>