@model partyModel

@{
    string action;
    var model = Model;
    bool hidden = false, disabled = false;
}

<div class="container">
    <div class="clsAddParty">
        @if (ViewBag.id == 0)
            {
                action = "AddParty";
                <label class="h2">Add Party</label>
            }
            else if (ViewBag.id > 0)
            {
                action = "EditParty";
                <label class="h2">Update Party</label>
            }
            else
            {
                action = "AddParty";
                <label class="h2">Add Party</label>
            }

    </div>
    <div class="w-100 align-content-center">
        @if (ViewBag.isSuccess == 0)
        {
            if (ViewBag.id == 0)
            {

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Congratulations</strong> You added new Party successfully.
                </div>

            }
            else
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Congratulations</strong> You updated  Party successfully.
                </div>

                hidden = true;
            }

        }
        else if (ViewBag.isSuccess == 1)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Opps</strong> Your Party is  Already There
            </div>
        }

   
    </div>
    <div class="add-party-main-div">
        <form asp-action="@action" asp-controller="Party" enctype="multipart/form-data">
            <div class=" form-group row justify-content-center">
                <label asp-for="partyName" class="col-sm-2 col-form-label "></label>
              
                    <input asp-for="partyName" class="form-control col-sm-4  " disabled="@hidden"  />
                   
              
             
                
                <span asp-validation-for="partyName" class="text-danger col-sm-3 col-form-label"></span>
            </div>

            <div class="form-group addPartyBtns">


                <input type="submit" value="Save" class="btn btn-primary saveBtn" hidden="@hidden" />


                <a  asp-controller="Party" asp-action="Party" value="Cancel" class="btn btn-danger cancelBtn" >Cancel</a>
            </div>

        </form>
    </div>

</div>
