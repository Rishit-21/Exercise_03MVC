
@model IEnumerable<partyModel>
<div class="container">

    <div class="main-heading-div">
        <label class="h2 main-heading ">Party</label>
    </div>
    <div class="Add-btn-div">
        <a asp-controller="Party" asp-action="AddParty" class="btn btn-block Add-btn">
            Add Party
        </a>
    </div>
    <div class="Partytbl table-center">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Party ID</th>
                    <th>Party Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.partyName</td>
                        <td>
                            <a data-value="@item.Id" asp-controller="Party" asp-action="EditParty" asp-route-Id="@item.Id" asp-route-PartyName="@item.partyName"
                               class="btn-outline-primary btn btn-primary">Edit</a>
                            <a data-value="@item.Id" asp-controller="Party" asp-action="DelParty" asp-route-Id="@item.Id"
                               class="btn-danger btn" onclick="return confirm('sure...?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>

@*asp-route-PartyName="@item.partyName"*@