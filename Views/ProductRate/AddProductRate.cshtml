@model ProductRateModel
@inject Exercise_03.Repository.IProductRateRepository _ProdRateRepo
@inject Exercise_03.Repository.IProductRepository _prodRepo

@{
    var model = Model;
    string action;
}

<div class="container">
    <div class="clsAddProductRate">



        @if (ViewBag.id == 0)
        {
            action = "AddProductRate";
            <label class="h2">Add Product Rate</label>
        }
        else if (ViewBag.id > 0)
        {
            action = "UpdateProductRate";
            <label class="h2">Update Product Rate</label>
        }
        else
        {
            action = "AddProductRate";
            <label class="h2">Add Product Rate</label>
        }

    </div>
    <div class="w-100 align-content-center" role="alert">
        @if (ViewBag.isSuccess == 0)
        {
            if (ViewBag.id == 0)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>congratulations</strong> You added New Product Rate successfully.
                </div>

            }
            else
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Congratulations</strong> Your Product Rate updated successfully.
                </div>
            }

        }
        else if (ViewBag.isSuccess == 1)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Opps</strong> Your Product is rated Already
            </div>

        }
    </div>
    <div class="add-productRate-main-div">
        <form asp-action="@action" asp-controller="ProductRate" enctype="multipart/form-data">

            @*<div class="col-sm-2 col-form-label">
                    <label>product name:</label>

                </div>*@
            <div class="form-group row justify-content-center">
                <label asp-for="ProductId" class="col-sm-4 col-form-label"></label>
                <select class="form-control col-sm-7" id="proRate" asp-for="ProductId"
                        asp-items="(await _prodRepo.GetAllProducts()).Select(x=> new SelectListItem() { Text=x.productName,Value=x.Id.ToString()})">
                    <option value="">Choose Your Product</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>

            </div>

            <div class=" add-productRate-txt-div">
                <label asp-for="ProductRates"></label>
                <input class=" add-Product-txt" asp-for="ProductRates" />
                <span asp-validation-for="ProductRates" class="text-danger"></span>
            </div>
            <div class=" add-productRateDate-txt-div">
                <label asp-for="DateOfRate"></label>
                <input class=" add-Product-txt" asp-for="DateOfRate" type="datetime" value="@DateTime.Today.ToString("dd-MM-yyyy")" disabled style="color:grey" />
                <span asp-validation-for="DateOfRate" class="text-danger"></span>
            </div>

            <div class="form-group addProductRateBtns">

                <input type="submit" value="Save" class="btn btn-primary saveBtn" />
                <a asp-action="ProductRate" asp-controller="ProductRate" value="Cancel" class="btn btn-danger  cancelBtn">Cancel</a>
            </div>

        </form>
    </div>

</div>


