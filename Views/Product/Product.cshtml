@model IEnumerable<ProductModel>

<div class="container">

    <div class="main-heading-div">
        <label class="h2 main-heading ">Products</label>
    </div>
    <div class="Add-btn-div">
        <a asp-controller="Product" asp-action="AddProduct" class="btn btn-block Add-btn">
            Add Product
        </a>
    </div>
    <div class="Partytbl table-center">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.productName</td>
                        <td>
                            <a data-value="@item.Id"
                               class="btn-outline-primary btn btn-primary" asp-controller="Product" asp-action="EditProduct" asp-route-id="@item.Id" asp-route-name="@item.productName">Edit</a>
                            <a data-value="@item.Id" asp-controller="Product" asp-action="DelProduct" asp-route-Id="@item.Id" onclick="return confirm('sure...?')"
                               class="btn-danger btn-outline btn">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>
